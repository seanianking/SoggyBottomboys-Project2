<link rel="stylesheet" href="./../assets/css/custom.css" type="text/css" />
<div class="jumbotron jumbotron-fluid my-0 py-4 bg-light">
    <div class="container">
        <h1 class="display-3">Welcome Athletes!</h1>
        <hr class="my-2">
    </div>
</div>
<div class="container my-4 border rounded border-primary">
    <div class="row">
        <div class="col-lg-12 px-0 border  border-info">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Please Login</h2>
                    <p class="card-text">
                        <div class="row">
                            <div class="col align-self-center">
                                <div class="card border rounded border-info">
                                    <div class="card-body border  border-warning">
                                        <form class="login">
                                            <div class="form-group">
                                                <label for="email-input">Email address</label>
                                                <input type="email" class="form-control" id="email-input"
                                                    aria-describedby="emailHelp">
                                                <small id="emailHelp" class="form-text text-muted">We'll never share
                                                    your email with anyone else.</small>
                                            </div>
                                            <div class="form-group">
                                                <label for="password-input">Password</label>
                                                <input type="password" class="form-control" id="password-input">
                                            </div>
                                            <div class="row">
                                                <div class="col">

                                                    <button type="submit" class="btn btn-info ml-0">Login</button>
                                                </div>
                                                <div class="col">
                                                    <span style="font-size: larger; display:inline-block"><a
                                                            class="text-info" href="/signup">Register new
                                                            user</a></span>

                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>