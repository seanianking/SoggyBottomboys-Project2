                            <input type="text" class="form-control" id="league-name" placeholder="League Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSport">Sport</label>
                        <input type="text" class="form-control" id="sport-name" placeholder="Sport">
                    </div>
                    <div class="form-group">
                        <label for="age-range">Age Range</label>
                        <select class="form-control" id="select-age">
                            <option value="5-7">5-7</option>
                            <option value="8-10">8-10</option>
                            <option value="11-13">11-13</option>
